[data-theme="dark"]
	--color-bg: #0D0D0D
	--color-surface: #121212
	--color-text: #e5e7eb
	--color-muted: #9ca3af
	--shadow-color: #00000059
	--shadow-hover: 0 6px 16px #00000073
	--text-highlight-color: #ffffffe6
	--code-bg: #171717
	--code-text: #d4d4d4
	--code-tools-bg: #1a1a1a
	--code-tools-color: #6a737d
	--mark-bg: #ffffff4d
	--code-inline-bg: #ffffff1a
	--blockquote-bg: #3b82f626
	--kbd-border: #4a5568
	--kbd-bg: #2d3748
	--kbd-color: #e2e8f0
	--table-thead-bg: #99a9bf0d

	#header.scrolled { background: #121212cc; box-shadow: 0 5px 6px -5px #85858500 }
	#nav-inner #blog-info .site-name { text-shadow: none }
	#nav-inner a.site-page, #nav-inner span.site-page { text-shadow: none }

	.widget.card-info[data-bg-dark]
		background-image: url(attr(data-bg-dark)) !important
