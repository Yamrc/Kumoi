[data-theme="dark"]
	--color-bg: #0D0D0D
	--color-surface: #121212
	--color-text: #e5e7eb
	--color-muted: #9ca3af
	--color-border: #1f2937
	--shadow-color: rgba(0, 0, 0, 0.35)
	--shadow-hover: 0 6px 16px rgba(0, 0, 0, 0.45)
	--text-highlight-color: rgba(255, 255, 255, 0.9)
	--code-bg: #171717
	--code-text: #d4d4d4
	--code-tools-bg: #1a1a1a
	--code-tools-color: #6a737d
	--mark-bg: rgba(255, 255, 255, 0.3)
	--code-inline-bg: rgba(255, 255, 255, 0.1)
	--blockquote-bg: rgba(59, 130, 246, 0.15)
	--kbd-border: #4a5568
	--kbd-bg: #2d3748
	--kbd-color: #e2e8f0
	--table-thead-bg: rgba(153, 169, 191, .05)

	#header.scrolled { background: rgba(18, 18, 18, 0.8); box-shadow: 0 5px 6px -5px rgba(133, 133, 133, 0) }
	#nav-inner #blog-info .site-name { text-shadow: none }
	#nav-inner a.site-page, #nav-inner span.site-page { text-shadow: none }

	.widget.card-info[data-bg-dark]
		background-image: url(attr(data-bg-dark)) !important
