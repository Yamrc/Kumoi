.posts
	display: block
	.post { margin-bottom: var(--space-6); }
html
	scrollbar-width: thin
	scrollbar-color: var(--color-primary) transparent
::-webkit-scrollbar
	width: 5px
	height: 5px
::-webkit-scrollbar-track
	background: transparent
::-webkit-scrollbar-thumb
	background: var(--color-primary)

article.post, .post-full, .page
	background: var(--color-surface)
	border: none
	border-radius: var(--radius-m)
	padding: var(--space-4)
	box-shadow: var(--shadow-1)
	transition: all 0.3s

.post-title
	margin: 0 0 6px
	font-size: 1.25rem
	a
		color: var(--color-text)
		text-decoration: none
		transition: color .2s
		&:hover { color: var(--color-primary) }

article.post .post-title a
	color: var(--color-text)
	&:hover { color: var(--color-primary) }

.post-meta
	color: var(--color-muted)
	font-size: var(--text-s)
	margin-bottom: var(--space-2)
	display: flex
	gap: var(--space-2)
	flex-wrap: wrap

.badge
	display: inline-block
	padding: 2px 6px
	border: 1px solid var(--color-border)
	border-radius: var(--radius-s)
	background: transparent
	text-decoration: none
	transition: all 0.3s

.badge-cat
	color: var(--color-text)
	&:hover
		color: var(--color-primary)
		border-color: var(--color-primary)
		background: rgba(59, 130, 246, 0.1)
.badge-date { color: var(--color-muted); }
.badge-tag
	color: var(--color-text)
	&:hover
		color: var(--color-primary)
		border-color: var(--color-primary)
		background: rgba(59, 130, 246, 0.1)

#rightside
	position: fixed
	right: var(--space-4)
	bottom: var(--space-4)
	.tools
		list-style: none
		margin: 0
		padding: 0
		display: grid
		gap: var(--space-2)
	button
		padding: var(--space-2) var(--space-3)
		border-radius: var(--radius-s)
		border: 1px solid var(--color-border)
		background: var(--color-surface)
		color: var(--color-text)
		box-shadow: var(--shadow-1)
		cursor: pointer
		transition: all 0.3s
		&:hover
			box-shadow: var(--shadow-hover)
			transform: translateY(-2px)

#sidebar-toc { display: none; }

.toc-list
	margin: 0
	padding-left: var(--space-3)
	font-size: var(--text-s)
	li
		margin: var(--space-1) 0
		a
			color: var(--color-text)
			text-decoration: none
			transition: all 0.3s
			&:hover, &.active
				color: var(--color-primary)

#toc-mobile { display: none; }

@media (max-width: 1024px)
	#toc-mobile
		display: block
		margin: var(--space-4) 0
		padding: var(--space-3)
		border: none
		border-radius: var(--radius-m)
		box-shadow: var(--shadow-1)
		background: var(--color-surface)
	#sidebar-toc { display: none !important; }

@media (min-width: 1025px)
	#toc-mobile { display: none !important; }

.widget
	background: var(--color-surface)
	border: none
	border-radius: var(--radius-m)
	padding: 20px 24px
	box-shadow: var(--shadow-1)
	transition: all 0.3s
	margin-top: var(--space-4)
	&:first-child { margin-top: 0 }
	&:hover
		box-shadow: var(--shadow-hover)
	h3
		margin: 0 0 var(--space-2)
		font-size: var(--text-m)
		font-weight: 600
	ul, ol, p
		margin: var(--space-2) 0 0
		padding: 0
	li
		margin: var(--space-1) 0
		padding: 0
		a
			color: var(--color-text)
			text-decoration: none
			transition: all 0.3s
			&:hover
				color: var(--color-primary)
	&.card-info
		background-repeat: no-repeat
		background-attachment: inherit
		background-size: 100%
		text-align: center
		&[data-bg]
			background-image: url(attr(data-bg url))
		h3
			display: none
		.avatar-img
			margin: 0 auto 12px
			width: 110px
			height: 110px
			border-radius: 50%
			overflow: hidden
			transform: translateZ(0)
			img
				width: 100%
				height: 100%
				object-fit: cover
		.author-info-name
			font-weight: 500
			font-size: 1.57em
			margin: 0
			color: var(--color-text)
		.author-info-description
			margin-top: -0.42em
			margin-bottom: 0
			color: var(--color-muted)
			font-size: var(--text-s)
		.site-data
			margin: 14px 0 4px
			display: table
			width: 100%
			table-layout: fixed
			a
				display: table-cell
				text-align: center
				text-decoration: none
				color: var(--color-text)
				transition: all 0.3s
				div
					transition: all 0.3s
				&:hover
					div
						color: var(--color-primary) !important
				.headline
					overflow: hidden
					text-overflow: ellipsis
					white-space: nowrap
					color: var(--color-text)
					font-size: 0.95em
					padding-bottom: 6px
				.length-num
					margin-top: -0.45em
					font-size: 1.43em
					font-weight: 700
					color: var(--text-highlight-color)
		#card-info-btn
			display: block
			margin-top: 14px
			padding: 8px 16px
			background-color: var(--color-primary)
			color: #fff
			text-align: center
			line-height: 1.6
			border-radius: 7px
			text-decoration: none
			transition: all 0.3s
			&:hover
				background-color: rgba(59, 130, 246, 0.8)
				transform: translateY(-1px)
			span
				padding-left: 6px
		.card-info-social-icons
			margin: 6px 0 -6px
			.social-icon
				display: inline-block
				margin: 0 10px
				color: var(--color-text)
				font-size: 1.4em
				text-decoration: none
				transition: all 0.3s
				i
					transition: all 0.3s
				&:hover
					color: var(--color-primary)
					i
						transform: rotate(360deg)

	&.widget-recent
		.recent-list
			list-style: none
			margin: 0
			padding: 0
			.recent-item
				display: flex
				flex-direction: row
				width: 100%
				gap: 12px
				align-items: center
				padding: 10px 0
				border-bottom: 1px dashed rgba(125,125,125,.35)
				&:last-child { border-bottom: none }
				.pic
					display: block
					width: 84px
					height: 56px
					overflow: hidden
					border-radius: var(--radius-s)
					img
						width: 100%
						height: 100%
						object-fit: cover
				.info
					flex: 1
					.title
						display: -webkit-box
						-webkit-line-clamp: 2
						-webkit-box-orient: vertical
						overflow: hidden
						color: var(--color-text)
						text-decoration: none
						transition: color .2s
						&:hover { color: var(--color-primary) }
					.time
						margin-top: 6px
						font-size: var(--text-s)
						color: var(--color-muted)

	&.widget-tags
		.tag-list
			display: flex
			flex-wrap: wrap
			gap: 8px 10px
			.tag-text
				text-decoration: none
				color: var(--color-text)
				position: relative
				padding-right: 10px
				transition: color .2s
				&:hover { color: var(--color-primary) }
				.name { font-size: var(--text-s) }
				.count
					position: absolute
					right: 0
					top: 0px
					padding: 0 2px
					color: var(--color-muted)
					font-size: 10px
					line-height: 1
					text-align: center

	&.widget-archives
		h3
			margin: 0 0 var(--space-1)
			font-size: var(--text-s)
		.arc-grid
			list-style: none
			margin: 0
			padding: 0
			display: grid
			grid-template-columns: 1fr 1fr
			gap: 12px
			@media (max-width: 900px)
				grid-template-columns: 1fr
			.arc-item .arc-box
				display: block
				padding: 10px 12px
				border: 1px dashed rgba(125,125,125,.35)
				border-radius: var(--radius-s)
				text-decoration: none
				transition: border-color .2s
				&:hover { border-color: var(--color-primary) }
				.year { color: var(--color-text); font-weight: 400; font-size: var(--text-s) }
				.count { margin-top: 4px; color: var(--color-muted); font-size: var(--text-s) }

pre { position: relative; }

.post-full
	max-width: 100%
	overflow: hidden
	img { max-width: 100% }
	pre
		max-width: 100%
		overflow: auto
		white-space: pre
	code
		display: inline-block
		max-width: 100%
		overflow: auto
	.post-content
		min-width: 0
		.table, table
			max-width: 100%
			display: block
			overflow: auto

.code-toolbar
	position: absolute
	top: 6px
	right: 6px
	display: flex
	gap: var(--space-2)
	align-items: center
	.code-lang
		font-size: var(--text-xs)
		color: var(--color-muted)
		padding: 0 var(--space-1)
	button
		font-size: var(--text-xs)
		padding: var(--space-1) var(--space-2)
		border: 1px solid var(--color-border)
		background: var(--color-surface)
		border-radius: var(--radius-s)
		cursor: pointer

pre.collapsed { max-height: 180px; overflow: auto; }
pre.code-fullscreen
	position: fixed !important
	inset: 32px
	z-index: 9999
	background: var(--color-surface)
	box-shadow: var(--shadow-2)
	border: 1px solid var(--color-border)
	padding-top: 36px

.recommend
	margin: 0 0 var(--space-6)
	padding: var(--space-3)
	border: none
	border-radius: var(--radius-m)
	background: var(--color-surface)
	box-shadow: var(--shadow-1)
	h3
		margin: 0 0 var(--space-2)
		font-size: var(--text-m)
		font-weight: 600
	ul
		margin: var(--space-2) 0 0
		padding-left: var(--space-3)

.tag-cloud
	display: flex
	flex-wrap: wrap
	gap: var(--space-2)
	a.tag
		padding: 2px 8px
		border: 1px solid var(--color-border)
		border-radius: var(--radius-s)
		background: var(--color-surface)
		color: var(--color-text)
		text-decoration: none
		transition: all 0.3s
		&:hover
			color: var(--color-primary)
			border-color: var(--color-primary)
			background: rgba(59, 130, 246, 0.1)

.hero-banner
	height: 400px
	background-size: cover
	background-position: center
	border-radius: var(--radius-m)
	overflow: hidden
	box-shadow: var(--shadow-1)
	.hero-inner
		height: 100%
		display: flex
		flex-direction: column
		align-items: center
		justify-content: center
		text-align: center
		padding: 0 var(--space-6)
		color: #fff
		text-shadow: 0 1px 2px rgba(0,0,0,.6)
		h1.site-title
			margin: 0 0 6px
			font-size: 2rem
		p.site-subtitle
			margin: 0
			opacity: .9
			font-size: var(--text-l)
	&.is-placeholder
		background-image: linear-gradient(135deg, #4f46e5, #60a5fa)

article.post
	transition: all 0.3s
	&.zigzag
		display: flex
		gap: 0
		align-items: stretch
		padding: 0
		overflow: hidden
		.post-cover { width: 42%; min-width: 0; height: 240px }
		.post-info { width: 58%; min-width: 0; padding: 0 40px; display: flex; flex-direction: column; justify-content: center }
		&.cover-right .post-cover { order: 2 }
		@media (max-width: 900px)
			flex-direction: column
			.post-cover { width: 100%; min-width: 0; height: auto; aspect-ratio: 16 / 9 }
			&.cover-right .post-cover { order: 0 }
			.post-info { width: 100%; align-items: center; text-align: center; padding: 16px 20px }
	.post-cover
		display: block
		overflow: hidden
		border-radius: 0
		margin: 0
		aspect-ratio: 16 / 9
		img
			width: 100%
			height: 100%
			object-fit: cover
			transition: transform 0.6s, filter 0.375s ease-in 0.2s
		.cover-placeholder
			width: 100%
			height: 100%
			background: linear-gradient(135deg, rgba(79,70,229,.85), rgba(96,165,250,.85))
		&:hover img
			transform: scale(1.05)
	&:hover { box-shadow: var(--shadow-2); }
	.post-info { display: block }
.post-meta-line
	margin: 0 0 4px
	font-size: var(--text-s)
	color: var(--color-muted)
	display: flex
	gap: 10px
	flex-wrap: wrap
	align-items: center
	.meta-item { color: var(--color-muted); text-decoration: none }
	.meta-sep { margin: 0 2px; color: var(--color-muted) }

.post-excerpt
	margin-top: 2px
	color: var(--color-text)
	line-height: 1.75
	font-size: var(--text-m)
	p { margin: 0 }

.post-actions
	margin-top: var(--space-3)
	display: flex
	gap: var(--space-2)
	flex-wrap: wrap
	.read-more
		display: inline-block
		padding: 6px 12px
		border-radius: var(--radius-s)
		background: var(--color-primary)
		color: #fff
		text-decoration: none
		transition: all 0.3s
		&:hover
			filter: brightness(0.95)

.article-sort
	position: relative
	margin: 0
	padding: 0 0 0 28px
	&:before
		content: ''
		position: absolute
		left: 10px
		top: 0
		bottom: 0
		width: 2px
		background: linear-gradient(to bottom, var(--color-border), var(--color-border))
		opacity: .8
	.article-sort-item.year
		position: relative
		margin: var(--space-4) 0 var(--space-2)
		font-size: 1.1rem
		font-weight: 700
		color: var(--color-text)
		&:before
			content: ''
			position: absolute
			left: -24px
			top: .6em
			width: 10px
			height: 10px
			border-radius: 50%
			background: var(--color-primary)
			box-shadow: 0 0 0 3px rgba(59,130,246,.18)
	.article-sort-item
		position: relative
		display: flex
		align-items: center
		gap: 14px
		padding: 10px 0
		&:before
			content: ''
			position: absolute
			left: -23px
			top: 50%
			transform: translateY(-50%)
			width: 8px
			height: 8px
			border-radius: 50%
			background: var(--color-surface)
			border: 2px solid var(--color-primary)
		&.no-article-cover .article-sort-item-img { display: none }
		.article-sort-item-img
			display: block
			width: 120px
			height: 80px
			overflow: hidden
			border-radius: var(--radius-s)
			img
				width: 100%
				height: 100%
				object-fit: cover
		.article-sort-item-info
			flex: 1
			min-width: 0
			.article-sort-item-time
				color: var(--color-muted)
				font-size: var(--text-s)
				margin: 0 0 4px
				i { margin-right: 6px }
			.article-sort-item-title
				color: var(--color-text)
				text-decoration: none
				transition: color .2s
				&:hover { color: var(--color-primary) }

@media (max-width: 900px)
	.article-sort .article-sort-item
		align-items: flex-start
		.article-sort-item-img { width: 100px; height: 66px }

@media (max-width: 900px)
	.hero-banner { height: 200px }
