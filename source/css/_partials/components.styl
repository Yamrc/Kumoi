.posts
	display: block
	.post { margin-bottom: var(--space-6); }

article.post, .post-full, .page
	background: var(--color-surface)
	border: none
	border-radius: var(--radius-m)
	padding: var(--space-4)
	box-shadow: var(--shadow-1)
	transition: all 0.3s

.post-title
	margin: 0 0 var(--space-2)
	font-size: 1.25rem

.post-meta
	color: var(--color-muted)
	font-size: var(--text-s)
	margin-bottom: var(--space-2)
	display: flex
	gap: var(--space-2)
	flex-wrap: wrap

.badge
	display: inline-block
	padding: 2px 6px
	border: 1px solid var(--color-border)
	border-radius: var(--radius-s)
	background: transparent
	text-decoration: none
	transition: all 0.3s

.badge-cat
	color: var(--color-text)
	&:hover
		color: var(--color-primary)
		border-color: var(--color-primary)
		background: rgba(59, 130, 246, 0.1)
.badge-date { color: var(--color-muted); }

#rightside
	position: fixed
	right: var(--space-4)
	bottom: var(--space-4)
	.tools
		list-style: none
		margin: 0
		padding: 0
		display: grid
		gap: var(--space-2)
	button
		padding: var(--space-2) var(--space-3)
		border-radius: var(--radius-s)
		border: 1px solid var(--color-border)
		background: var(--color-surface)
		color: var(--color-text)
		box-shadow: var(--shadow-1)
		cursor: pointer
		transition: all 0.3s
		&:hover
			box-shadow: var(--shadow-hover)
			transform: translateY(-2px)

#sidebar-toc { display: none; }

.toc-list
	margin: 0
	padding-left: var(--space-3)
	font-size: var(--text-s)
	li
		margin: var(--space-1) 0
		a
			color: var(--color-text)
			text-decoration: none
			transition: all 0.3s
			&:hover, &.active
				color: var(--color-primary)

#toc-mobile { display: none; }

@media (max-width: 1024px)
	#toc-mobile
		display: block
		margin: var(--space-4) 0
		padding: var(--space-3)
		border: none
		border-radius: var(--radius-m)
		box-shadow: var(--shadow-1)
		background: var(--color-surface)
	#sidebar-toc { display: none !important; }

@media (min-width: 1025px)
	#toc-mobile { display: none !important; }

.widget
	background: var(--color-surface)
	border: none
	border-radius: var(--radius-m)
	padding: 20px 24px
	box-shadow: var(--shadow-1)
	transition: all 0.3s
	+ .widget { margin-top: var(--space-4); }
	&:hover
		box-shadow: var(--shadow-hover)
	h3
		margin: 0 0 var(--space-2)
		font-size: var(--text-m)
		font-weight: 600
	ul, ol, p
		margin: var(--space-2) 0 0
		padding: 0
	li
		margin: var(--space-1) 0
		padding: 0
		a
			color: var(--color-text)
			text-decoration: none
			transition: all 0.3s
			&:hover
				color: var(--color-primary)
	&.card-info
		background-repeat: no-repeat
		background-attachment: inherit
		background-size: 100%
		text-align: center
		&[data-bg]
			background-image: url(attr(data-bg url))
		h3
			display: none
		.avatar-img
			margin: 0 auto 12px
			width: 110px
			height: 110px
			border-radius: 50%
			overflow: hidden
			transform: translateZ(0)
			img
				width: 100%
				height: 100%
				object-fit: cover
		.author-info-name
			font-weight: 500
			font-size: 1.57em
			margin: 0
			color: var(--color-text)
		.author-info-description
			margin-top: -0.42em
			margin-bottom: 0
			color: var(--color-muted)
			font-size: var(--text-s)
		.site-data
			margin: 14px 0 4px
			display: table
			width: 100%
			table-layout: fixed
			a
				display: table-cell
				text-align: center
				text-decoration: none
				color: var(--color-text)
				transition: all 0.3s
				div
					transition: all 0.3s
				&:hover
					div
						color: var(--color-primary) !important
				.headline
					overflow: hidden
					text-overflow: ellipsis
					white-space: nowrap
					color: var(--color-text)
					font-size: 0.95em
					padding-bottom: 6px
				.length-num
					margin-top: -0.45em
					font-size: 1.43em
					font-weight: 700
					color: var(--text-highlight-color)
		#card-info-btn
			display: block
			margin-top: 14px
			padding: 8px 16px
			background-color: var(--color-primary)
			color: #fff
			text-align: center
			line-height: 1.6
			border-radius: 7px
			text-decoration: none
			transition: all 0.3s
			&:hover
				background-color: rgba(59, 130, 246, 0.8)
				transform: translateY(-1px)
			span
				padding-left: 6px
		.card-info-social-icons
			margin: 6px 0 -6px
			.social-icon
				display: inline-block
				margin: 0 10px
				color: var(--color-text)
				font-size: 1.4em
				text-decoration: none
				transition: all 0.3s
				i
					transition: all 0.3s
				&:hover
					color: var(--color-primary)
					i
						transform: rotate(360deg)

pre { position: relative; }

.code-toolbar
	position: absolute
	top: 6px
	right: 6px
	display: flex
	gap: var(--space-2)
	align-items: center
	.code-lang
		font-size: var(--text-xs)
		color: var(--color-muted)
		padding: 0 var(--space-1)
	button
		font-size: var(--text-xs)
		padding: var(--space-1) var(--space-2)
		border: 1px solid var(--color-border)
		background: var(--color-surface)
		border-radius: var(--radius-s)
		cursor: pointer

pre.collapsed { max-height: 180px; overflow: auto; }
pre.code-fullscreen
	position: fixed !important
	inset: 32px
	z-index: 9999
	background: var(--color-surface)
	box-shadow: var(--shadow-2)
	border: 1px solid var(--color-border)
	padding-top: 36px

.recommend
	margin: 0 0 var(--space-6)
	padding: var(--space-3)
	border: none
	border-radius: var(--radius-m)
	background: var(--color-surface)
	box-shadow: var(--shadow-1)
	h3
		margin: 0 0 var(--space-2)
		font-size: var(--text-m)
		font-weight: 600
	ul
		margin: var(--space-2) 0 0
		padding-left: var(--space-3)

.tag-cloud
	display: flex
	flex-wrap: wrap
	gap: var(--space-2)
	a.tag
		padding: 2px 8px
		border: 1px solid var(--color-border)
		border-radius: var(--radius-s)
		background: var(--color-surface)
		color: var(--color-text)
		text-decoration: none
		transition: all 0.3s
		&:hover
			color: var(--color-primary)
			border-color: var(--color-primary)
			background: rgba(59, 130, 246, 0.1)

.hero-banner
	height: 400px
	background-size: cover
	background-position: center
	border-radius: var(--radius-m)
	overflow: hidden
	box-shadow: var(--shadow-1)
	.hero-inner
		height: 100%
		display: flex
		flex-direction: column
		align-items: center
		justify-content: center
		text-align: center
		padding: 0 var(--space-6)
		color: #fff
		text-shadow: 0 1px 2px rgba(0,0,0,.6)
		h1.site-title
			margin: 0 0 6px
			font-size: 2rem
		p.site-subtitle
			margin: 0
			opacity: .9
			font-size: var(--text-l)
	&.is-placeholder
		background-image: linear-gradient(135deg, #4f46e5, #60a5fa)

article.post
	transition: all 0.3s
	.post-cover
		display: block
		overflow: hidden
		border-radius: var(--radius-m)
		margin: 0 0 var(--space-3)
		img
			width: 100%
			height: 200px
			object-fit: cover
			transition: transform 0.6s, filter 0.375s ease-in 0.2s
		&:hover img
			transform: scale(1.05)
	&:hover { box-shadow: var(--shadow-2); }
