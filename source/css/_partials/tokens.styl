:root
	--color-primary: #3b82f6
	--color-bg: #fff
	--color-surface: #fff
	--color-text: #111827
	--color-muted: #6b7280
	--color-border: #eef2f7
	--shadow-color: rgba(17, 24, 39, 0.10)

	--radius-s: 8px
	--radius-m: 12px
	--shadow-1: 0 3px 8px 6px rgba(7, 17, 27, 0.05)
	--shadow-2: 0 10px 24px var(--shadow-color)
	--shadow-hover: 0 3px 8px 6px rgba(7, 17, 27, 0.09)

	--space-1: 4px
	--space-2: 8px
	--space-3: 12px
	--space-4: 16px
	--space-6: 24px
	--space-8: 32px

	--font-sans: ui-sans-serif, system-ui, -apple-system, Segoe UI, Noto Sans, Helvetica, Arial, "Apple Color Emoji", "Segoe UI Emoji"
	--font-mono: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace
	--text-xs: 12px
	--text-s: 14px
	--text-m: 16px
	--text-l: 18px
	--text-xl: 20px
	--line: 1.7

	--container: 1400px
	--text-highlight-color: var(--color-primary)
	--blockquote-color: #6a737d
	--blockquote-bg: rgba(59, 130, 246, 0.1)
	--mark-bg: rgba(0, 0, 0, 0.3)
