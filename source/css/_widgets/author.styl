.widget
	&.card-info
		background-repeat: no-repeat
		background-attachment: inherit
		background-size: 100%
		text-align: center
		&[data-bg]
			background-image: url(attr(data-bg url))
		h3
			display: none
		.avatar-img
			margin: 0 auto 12px
			width: 110px
			height: 110px
			border-radius: 50%
			overflow: hidden
			transform: translateZ(0)
			img
				width: 100%
				height: 100%
				object-fit: cover
		.author-info-name
			font-weight: 500
			font-size: 1.57em
			margin: 0
			color: var(--color-text)
		.author-info-description
			margin-top: -0.42em
			margin-bottom: 0
			color: var(--color-muted)
			font-size: var(--text-s)
		.site-data
			margin: 14px 0 4px
			display: table
			width: 100%
			table-layout: fixed
			a
				display: table-cell
				text-align: center
				text-decoration: none
				color: var(--color-text)
				transition: all 0.3s
				div
					transition: all 0.3s
				&:hover
					div
						color: var(--color-primary) !important
				.headline
					overflow: hidden
					text-overflow: ellipsis
					white-space: nowrap
					color: var(--color-text)
					font-size: 0.95em
					padding-bottom: 6px
				.length-num
					margin-top: -0.45em
					font-size: 1.43em
					font-weight: 700
					color: var(--text-highlight-color)
		#card-info-btn
			display: block
			margin-top: 14px
			padding: 8px 16px
			background-color: var(--color-primary)
			color: #fff
			text-align: center
			line-height: 1.6
			border-radius: 7px
			text-decoration: none
			transition: all 0.3s
			&:hover
				background-color: rgba(59, 130, 246, 0.8)
				transform: translateY(-1px)
			span
				padding-left: 6px
		.card-info-social-icons
			margin: 6px 0 -6px
			.social-icon
				display: inline-block
				margin: 0 10px
				color: var(--color-text)
				font-size: 1.4em
				text-decoration: none
				transition: all 0.3s
				i
					transition: all 0.3s
				&:hover
					color: var(--color-primary)
					i
						transform: rotate(360deg)
