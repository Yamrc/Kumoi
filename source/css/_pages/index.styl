.posts
	.post { margin-bottom: var(--space-6); }

.pagination
	display: flex
	justify-content: space-between
	margin-top: var(--space-6)
	a
		padding: var(--space-2) var(--space-4)
		border: none
		border-radius: var(--radius-s)
		box-shadow: var(--shadow-1)
		background: var(--color-surface)

.post-title
	margin: 0 0 6px
	font-size: 1.25rem
	a
		color: var(--color-text)
		text-decoration: none
		transition: color .2s
		&:hover { color: var(--color-primary) }

article.post
	transition: all 0.3s
	&.zigzag
		display: flex
		gap: 0
		align-items: stretch
		padding: 0
		.post-cover { width: 42%; min-width: 0; height: 240px }
		.post-info { width: 58%; min-width: 0; padding: 0 40px; display: flex; flex-direction: column; justify-content: center }
		&.cover-right .post-cover { order: 2 }
		@media (max-width: 900px)
			flex-direction: column
			.post-cover { width: 100%; min-width: 0; height: auto; aspect-ratio: 16 / 9 }
			&.cover-right .post-cover { order: 0 }
			.post-info { width: 100%; align-items: center; text-align: center; padding: 16px 20px }
	.post-cover
		display: block
		overflow: hidden
		border-radius: 0
		margin: 0
		aspect-ratio: 16 / 9
		img
			width: 100%
			height: 100%
			object-fit: cover
			transition: transform 0.6s, filter 0.375s ease-in 0.2s
		.cover-placeholder
			width: 100%
			height: 100%
			background: linear-gradient(135deg, rgba(79,70,229,.85), rgba(96,165,250,.85))
		&:hover img
			transform: scale(1.05)
	&:hover { box-shadow: var(--shadow-2); }
	.post-info { display: block }

.post-meta-line
	margin: 0 0 4px
	font-size: var(--text-s)
	color: var(--color-muted)
	display: flex
	gap: 10px
	flex-wrap: wrap
	align-items: center
	.meta-item { color: var(--color-muted); text-decoration: none }
	.meta-sep { margin: 0 2px; color: var(--color-muted) }

.post-excerpt
	margin-top: 2px
	color: var(--color-text)
	line-height: 1.75
	font-size: var(--text-m)
	p { margin: 0 }

.post-actions
	margin-top: var(--space-3)
	display: flex
	gap: var(--space-2)
	flex-wrap: wrap
	.read-more
		display: inline-block
		padding: 6px 12px
		border-radius: var(--radius-s)
		background: var(--color-primary)
		color: #fff
		text-decoration: none
		transition: all 0.3s
		&:hover
			filter: brightness(0.95)

.hero-banner
	height: 400px
	border-radius: var(--radius-m)
	overflow: hidden
	box-shadow: var(--shadow-1)
	.hero-inner
		height: 100%
		display: flex
		flex-direction: column
		align-items: center
		justify-content: center
		text-align: center
		padding: 0 var(--space-6)
		color: #fff
		text-shadow: 0 1px 2px rgba(0,0,0,.6)
		h1.site-title
			margin: 0 0 6px
			font-size: 2rem
		p.site-subtitle
			margin: 0
			opacity: .9
			font-size: var(--text-l)
	&.is-placeholder
		background-image: linear-gradient(135deg, #4f46e5, #60a5fa)

@media (max-width: 900px)
	.hero-banner { height: 200px }
