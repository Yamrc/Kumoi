#search-modal
	&.hidden { display: none; }
	position: fixed
	inset: 0
	z-index: 1000
	.search-backdrop
		position: absolute
		inset: 0
		background: rgba(0,0,0,.45)
	.search-dialog
		position: relative
		max-width: 640px
		margin: 10vh auto
		background: var(--color-surface)
		border-radius: var(--radius-m)
		box-shadow: var(--shadow-2)
		overflow: hidden
	.search-header
		display: flex
		align-items: center
		justify-content: space-between
		padding: var(--space-3) var(--space-4)
		border-bottom: 1px solid var(--color-border)
	.search-body
		padding: var(--space-4)
		input
			width: 100%
			padding: 10px 12px
			border: 1px solid var(--color-border)
			border-radius: var(--radius-s)
			margin: 0 0 var(--space-3)
		.results
			max-height: 360px
			overflow: auto
