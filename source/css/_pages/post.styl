article.post, .post-full, .page
	background: var(--color-surface)
	border: none
	border-radius: var(--radius-m)
	padding: 50px 40px
	box-shadow: var(--shadow-1)
	transition: all 0.3s
	@media (max-width: 768px)
		padding: 36px 14px

.post-meta
	color: var(--color-muted)
	font-size: var(--text-s)
	margin-bottom: var(--space-2)
	display: flex
	gap: var(--space-2)
	flex-wrap: wrap

pre { position: relative; }

.post-full
	figure.highlight
		margin: 0 0 20px
		overflow: auto
		background: #f6f8fa
		border-radius: var(--radius-s)
		table
			display: block
			overflow: auto
			border: none
			margin: 0
			td
				padding: 0
				border: none
		.gutter
			user-select: none
			-webkit-user-select: none
			pre
				padding: 10px 8px
				margin: 0
				color: #6a737d
				text-align: right
		.code
			pre
				padding: 10px 16px
				color: #24292e
		.highlight-tools
			display: flex
			align-items: center
			padding: 0 8px
			min-height: 32px
			background: #e1e4e8
			color: #6a737d
			font-size: var(--text-s)
			.code-lang
				flex: 1
				text-transform: uppercase
				font-weight: bold
				font-size: 1.15em
				user-select: none
				-webkit-user-select: none
	img
		display: block
		margin: 0 auto 20px
		max-width: 100%
		border-radius: var(--radius-s)
	pre
		max-width: 100%
		overflow: auto
		white-space: pre
		code
			display: block
			padding: 0
			background: transparent
			border-radius: 0
			font-size: inherit
	.post-content
		min-width: 0
		a
			color: var(--color-primary)
			&:hover
				text-decoration: underline
		p
			margin: 0 0 16px
		iframe
			margin: 0 0 20px
		strong
			font-weight: bold
		em
			font-style: italic
		u
			text-decoration: underline
		del
			text-decoration: line-through
		mark
			background-color: var(--mark-bg)
			padding: 0 2px
		code
			padding: 2px 6px
			background-color: rgba(27, 31, 35, 0.05)
			border-radius: 3px
			font-family: var(--font-mono)
			font-size: 0.9em
		blockquote
			margin: 0 0 20px
			padding: 7px 15px
			border-left: 4px solid var(--color-primary)
			background-color: var(--blockquote-bg)
			color: var(--blockquote-color)
			border-radius: var(--radius-s)
			& > :last-child
				margin-bottom: 0 !important
		dl
			margin: 0 0 16px
			dt
				font-weight: bold
				margin-top: 8px
				&:first-child
					margin-top: 0
			dd
				margin: 4px 0 0 20px
		kbd
			margin: 0 3px
			padding: 3px 5px
			border: 1px solid #b4b4b4
			background-color: #f8f8f8
			box-shadow: 0 1px 3px rgba(0, 0, 0, .25), 0 2px 1px 0 rgba(255, 255, 255, .6) inset
			color: #34495e
			white-space: nowrap
			font-weight: 600
			font-size: .9em
			font-family: var(--font-mono)
			line-height: 1em
			border-radius: 3px
		ol, ul
			ol, ul
				padding-left: 20px
			li
				margin: 4px 0
				&::marker
					color: var(--color-primary)
					font-weight: 600
			p
				margin: 0 0 8px
		ul > li
			list-style-type: circle
		> :last-child
			margin-bottom: 0 !important
		hr
			margin: 20px 0
			border: 2px dashed var(--color-border)
		.table, table
			display: table
			width: 100%
			border-spacing: 0
			border-collapse: separate
			border-top: 1px solid var(--color-border)
			border-left: 1px solid var(--color-border)
			margin: 0 0 20px
			thead
				background: rgba(153, 169, 191, .1)
			th, td
				padding: 6px 12px
				border: 1px solid var(--color-border)
				border-top: none
				border-left: none
				vertical-align: middle
		figure.highlight
			table
				display: block
				overflow: auto
				border: none
				margin: 0
				td
					padding: 0
					border: none
		sup, sub
			font-size: .75em
			line-height: 0
			position: relative
			vertical-align: baseline
		sup
			top: -0.5em
		sub
			bottom: -0.25em
		abbr, acronym
			cursor: help
		cite
			font-style: italic

[data-theme="dark"]
	.post-content
		mark
			background-color: rgba(255, 255, 255, 0.3)
		code
			background-color: rgba(255, 255, 255, 0.1)
		blockquote
			background-color: rgba(59, 130, 246, 0.15)
		kbd
			border-color: #4a5568
			background-color: #2d3748
			color: #e2e8f0
		.table, table
			border-top-color: var(--color-border)
			border-left-color: var(--color-border)
			thead
				background: rgba(153, 169, 191, .05)
			th, td
				border-color: var(--color-border)
	.post-full
		figure.highlight
			background: #1e1e1e
			.gutter pre
				background: transparent
				color: #6a737d
			.code pre
				color: #d4d4d4
			.highlight-tools
				background: #e1e4e8
				color: #6a737d

.code-toolbar
	position: absolute
	top: 6px
	right: 6px
	display: flex
	gap: var(--space-2)
	align-items: center
	.code-lang
		font-size: var(--text-xs)
		color: var(--color-muted)
		padding: 0 var(--space-1)
	button
		font-size: var(--text-xs)
		padding: var(--space-1) var(--space-2)
		border: 1px solid var(--color-border)
		background: var(--color-surface)
		border-radius: var(--radius-s)
		cursor: pointer

pre.collapsed { max-height: 180px; overflow: auto; }
pre.code-fullscreen
	position: fixed !important
	inset: 32px
	z-index: 9999
	background: var(--color-surface)
	box-shadow: var(--shadow-2)
	border: 1px solid var(--color-border)
	padding-top: 36px
