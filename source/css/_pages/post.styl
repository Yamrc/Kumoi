.post-meta
	color: var(--color-muted)
	font-size: var(--text-s)
	margin-bottom: var(--space-2)
	display: flex
	gap: var(--space-2)
	flex-wrap: wrap

pre { position: relative; }

.post-full
	max-width: 100%
	overflow: hidden
	img { max-width: 100% }
	pre
		max-width: 100%
		overflow: auto
		white-space: pre
	code
		display: inline-block
		max-width: 100%
		overflow: auto
	.post-content
		min-width: 0
		.table, table
			max-width: 100%
			display: block
			overflow: auto

.code-toolbar
	position: absolute
	top: 6px
	right: 6px
	display: flex
	gap: var(--space-2)
	align-items: center
	.code-lang
		font-size: var(--text-xs)
		color: var(--color-muted)
		padding: 0 var(--space-1)
	button
		font-size: var(--text-xs)
		padding: var(--space-1) var(--space-2)
		border: 1px solid var(--color-border)
		background: var(--color-surface)
		border-radius: var(--radius-s)
		cursor: pointer

pre.collapsed { max-height: 180px; overflow: auto; }
pre.code-fullscreen
	position: fixed !important
	inset: 32px
	z-index: 9999
	background: var(--color-surface)
	box-shadow: var(--shadow-2)
	border: 1px solid var(--color-border)
	padding-top: 36px
