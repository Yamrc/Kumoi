article.post, .post-full, .page
	background: var(--color-surface)
	border: none
	border-radius: var(--radius-m)
	padding: 50px 40px
	box-shadow: var(--shadow-1)
	transition: all 0.3s
	@media (max-width: 768px)
		padding: 36px 14px

.post-meta
	color: var(--color-muted)
	font-size: var(--text-s)
	margin-bottom: var(--space-2)
	display: flex
	gap: var(--space-2)
	flex-wrap: wrap

.post-full
	.post-content
		min-width: 0
		> :last-child
			margin-bottom: 0 !important
		img
			display: block
			margin: 0 auto 20px
			max-width: 100%
			border-radius: var(--radius-s)
		pre:not(figure.highlight pre)
			max-width: 100%
			overflow: auto
			white-space: pre
			code
				display: block
				padding: 0
				background: transparent
				border-radius: 0
				font-size: inherit
		a
			color: var(--color-primary)
			&:hover
				text-decoration: underline
		p
			margin: 0 0 16px
		iframe
			margin: 0 0 20px
		hr
			margin: 20px 0
			border: 2px dashed var(--color-border)
		strong
			font-weight: bold
		em
			font-style: italic
		u
			text-decoration: underline
		del
			text-decoration: line-through
		mark
			background-color: var(--mark-bg)
			padding: 0 2px
		code
			padding: 2px 6px
			background-color: var(--code-inline-bg)
			border-radius: 3px
			font-family: var(--font-mono)
			font-size: 0.9em
		kbd
			margin: 0 3px
			padding: 3px 5px
			border: 1px solid var(--kbd-border)
			background-color: var(--kbd-bg)
			box-shadow: 0 1px 3px rgba(0, 0, 0, .25), 0 2px 1px 0 rgba(255, 255, 255, .6) inset
			color: var(--kbd-color)
			white-space: nowrap
			font-weight: 600
			font-size: .9em
			font-family: var(--font-mono)
			line-height: 1em
			border-radius: 3px
		blockquote
			margin: 0 0 20px
			padding: 7px 15px
			border-left: 4px solid var(--color-primary)
			background-color: var(--blockquote-bg)
			color: var(--blockquote-color)
			border-radius: var(--radius-s)
			& > :last-child
				margin-bottom: 0 !important
		ol, ul
			ol, ul
				padding-left: 20px
			li
				margin: 4px 0
				&::marker
					color: var(--color-primary)
					font-weight: 600
			p
				margin: 0 0 8px
		ul > li
			list-style-type: circle
		dl
			margin: 0 0 16px
			dt
				font-weight: bold
				margin-top: 8px
				&:first-child
					margin-top: 0
			dd
				margin: 4px 0 0 20px
		.table, table
			display: table
			width: 100%
			border-spacing: 0
			border-collapse: separate
			border-top: 1px solid var(--color-border)
			border-left: 1px solid var(--color-border)
			margin: 0 0 20px
			thead
				background: var(--table-thead-bg)
			th, td
				padding: 6px 12px
				border: 1px solid var(--color-border)
				border-top: none
				border-left: none
				vertical-align: middle
		sup, sub
			font-size: .75em
			line-height: 0
			position: relative
			vertical-align: baseline
		sup
			top: -0.5em
		sub
			bottom: -0.25em
		abbr, acronym
			cursor: help
		cite
			font-style: italic

		figure.highlight
			position: relative
			margin: 0 0 24px
			overflow: hidden
			background: var(--code-bg)
			border-radius: 8px
			-webkit-transform: translateZ(0)
			&.closed
				pre
					max-height: 0
				.tools .expand
					transform: rotate(-90deg)
			.tools
				display: flex
				align-items: center
				padding: 0 8px
				height: 2.15em
				background: var(--code-tools-bg)
				color: var(--code-tools-color)
				font-size: var(--text-s)
				*
					padding: 5px
					user-select: none
				i
					cursor: pointer
					transition: transform 0.2s ease-out, color 0.2s ease-out
					&:hover
						color: var(--color-primary)
				.code-lang
					flex: 1
					font-weight: bold
					font-size: 1.15em
				.copy-notice
					padding-right: 2px
					opacity: 0
					transition: opacity 0.4s
			pre
				margin: 0
				padding: 8px 0
				background: transparent
				color: var(--code-text)
				overflow: hidden
				transition: max-height 0.3s ease
				code
					display: block
					padding: 0
					text-shadow: none
					background: transparent
					color: inherit
					font-size: inherit
				&.line-numbers
					padding-left: 3.8em
					line-height: 1.7
					code
						position: relative
			.line-numbers-rows
				position: absolute
				top: 0
				left: -3.8em
				width: 3em
				letter-spacing: -1px
				pointer-events: none
				user-select: none
				span
					counter-increment: linenumber
					&:before
						display: block
						padding-right: 0.8em
						color: var(--code-tools-color)
						content: counter(linenumber)
						text-align: right