.article-sort
	position: relative
	margin: 0
	padding: 0 0 0 28px
	&:before
		content: ''
		position: absolute
		left: 10px
		top: 0
		bottom: 0
		width: 2px
		background: linear-gradient(to bottom, var(--color-border), var(--color-border))
		opacity: .8
	.article-sort-item.year
		position: relative
		margin: var(--space-4) 0 var(--space-2)
		font-size: 1.1rem
		font-weight: 700
		color: var(--color-text)
		&:before
			content: ''
			position: absolute
			left: -24px
			top: .6em
			width: 10px
			height: 10px
			border-radius: 50%
			background: var(--color-primary)
			box-shadow: 0 0 0 3px rgba(59,130,246,.18)
	.article-sort-item
		position: relative
		display: flex
		align-items: center
		gap: 14px
		padding: 10px 0
		&:before
			content: ''
			position: absolute
			left: -23px
			top: 50%
			transform: translateY(-50%)
			width: 8px
			height: 8px
			border-radius: 50%
			background: var(--color-surface)
			border: 2px solid var(--color-primary)
		&.no-article-cover .article-sort-item-img { display: none }
		.article-sort-item-img
			display: block
			width: 120px
			height: 80px
			overflow: hidden
			border-radius: var(--radius-s)
			img
				width: 100%
				height: 100%
				object-fit: cover
		.article-sort-item-info
			flex: 1
			min-width: 0
			.article-sort-item-time
				color: var(--color-muted)
				font-size: var(--text-s)
				margin: 0 0 4px
				i { margin-right: 6px }
			.article-sort-item-title
				color: var(--color-text)
				text-decoration: none
				transition: color .2s
				&:hover { color: var(--color-primary) }

@media (max-width: 900px)
	.article-sort .article-sort-item
		align-items: flex-start
		.article-sort-item-img { width: 100px; height: 66px }
