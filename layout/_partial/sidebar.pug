aside#sidebar
	- const isPost = page.layout === 'post' || page.type === 'post'
	- const defaultsPost = ['author','toc','recent_posts']
	- const defaultsOther = ['author','recent_posts','categories','tags','archives']
	- const cfgWidgets = theme.sidebar && theme.sidebar.widgets
	- const widgets = Array.isArray(cfgWidgets) && cfgWidgets.length ? cfgWidgets : (isPost ? defaultsPost : defaultsOther)
	if theme.sidebar && theme.sidebar.enable !== false
		each w in widgets
			- const widgetConfig = typeof w === 'object' ? w : { name: w, force: false }
			- const widgetName = widgetConfig.name || w
			- const forceShow = widgetConfig.force === true
			if widgetName === 'author'
				include ../widgets/author
			if widgetName === 'recent_posts'
				include ../widgets/recent
			if widgetName === 'categories'
				include ../widgets/categories
			if widgetName === 'tags'
				include ../widgets/tags
			if widgetName === 'archives'
				include ../widgets/archives
			if widgetName === 'toc'
				if isPost
					include ../widgets/toc
