- const bannerUrl = theme.appearance && theme.appearance.header && theme.appearance.header.banner_background
- const banner_background = bannerUrl ? `background: url(${url_for(bannerUrl)}) left 10% / cover no-repeat;` : ''
- const hasBanner = !!bannerUrl

.container
	.hero-banner(class=hasBanner ? '' : 'is-placeholder' style=hasBanner ? banner_background : '')
		.hero-inner
			h1.site-title= config.title
			p.site-subtitle= config.subtitle
